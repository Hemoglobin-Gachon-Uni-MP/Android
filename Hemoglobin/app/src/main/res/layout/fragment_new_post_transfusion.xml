<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/new_post_recipient_toolbar_tv"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingStart="16dp"
        android:text="수혈자 새 게시물"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/toolbar_underline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/new_post_recipient_close_icon_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_cancel"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/new_post_recipient_toolbar_tv"
        app:layout_constraintBottom_toBottomOf="@+id/new_post_recipient_toolbar_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="26dp"
        app:layout_constraintTop_toBottomOf="@+id/new_post_recipient_toolbar_tv"
        app:layout_constraintBottom_toTopOf="@+id/new_post_recipient_blood_type_cl">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/new_post_recipient_text_enterfield_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="글 입력 .."
                android:textColorHint="@color/grayD9"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/new_post_recipient_blood_type_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/new_post_recipient_blood_type_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수혈이 필요한 사람의 혈액형을 입력해주세요"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/new_post_recipient_text_abo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:text="ABO식"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_post_recipient_text_rh_tv" />

        <TextView
            android:id="@+id/new_post_recipient_text_rh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Rh식"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/new_post_recipient_rh_options_ll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/new_post_recipient_rh_options_ll" />

        <TextView
            android:id="@+id/new_post_recipient_text_aria_text_area_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:text="수혈지역"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/new_post_recipient_text_abo_tv" />

        <LinearLayout
            android:id="@+id/new_post_recipient_rh_options_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/new_post_recipient_text_rh_tv"
            app:layout_constraintTop_toBottomOf="@+id/new_post_recipient_blood_type_text_tv">

            <TextView
                android:id="@+id/new_post_recipient_plus_empty_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_unselected"
                android:text="Rh+"
                android:textColor="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/new_post_recipient_plus_selected_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_selected"
                android:text="Rh+"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/new_post_recipient_minus_empty_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_unselected"
                android:text="Rh-"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/new_post_recipient_minus_selected_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_selected"
                android:text="Rh-"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/new_post_recipient_abo_options_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/new_post_recipient_text_abo_tv"
            app:layout_constraintStart_toStartOf="@+id/new_post_recipient_rh_options_ll"
            app:layout_constraintTop_toTopOf="@+id/new_post_recipient_text_abo_tv">

            <TextView
                android:id="@+id/home_filter_menu_a_empty_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_unselected"
                android:paddingHorizontal="15dp"
                android:text="A"
                android:textColor="@color/black"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_filter_menu_a_selected_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_selected"
                android:paddingHorizontal="15dp"
                android:text="A"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_filter_menu_b_empty_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_unselected"
                android:paddingHorizontal="15dp"
                android:text="B"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/home_filter_menu_b_selected_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_selected"
                android:paddingHorizontal="15dp"
                android:text="B"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_filter_menu_ab_empty_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_unselected"
                android:text="AB"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/home_filter_menu_ab_selected_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_selected"
                android:text="AB"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/home_filter_menu_o_empty_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_unselected"
                android:paddingHorizontal="15dp"
                android:text="O"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/home_filter_menu_o_selected_tv"
                style="@style/home_filter_floating_tv"
                android:background="@drawable/style_filter_selected"
                android:paddingHorizontal="15dp"
                android:text="O"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/new_post_recipient_text_aria_text_area_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/new_post_recipient_rh_options_ll"
            app:layout_constraintTop_toTopOf="@+id/new_post_recipient_text_aria_text_area_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>