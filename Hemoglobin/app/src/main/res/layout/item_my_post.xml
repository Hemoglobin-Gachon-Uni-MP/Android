<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="198dp"
    android:layout_height="102dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/view_my_post">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/grayAE"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp" />
    <ImageButton
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_comments"
        app:layout_constraintTop_toTopOf="@+id/tv_comments_num"
        app:layout_constraintBottom_toBottomOf="@+id/tv_comments_num"
        app:layout_constraintRight_toLeftOf="@+id/tv_comments_num"
        android:layout_marginRight="4dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent" />
    <TextView
        android:id="@+id/tv_comments_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/grayAE"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp" />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="10dp"
        android:maxLines="3"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp" />
</androidx.constraintlayout.widget.ConstraintLayout>