<!--        android:layout_height="1dp"-->
<!--        android:background="@color/grayD9"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/item_post_contents_text_tv"-->
<!--        android:layout_marginTop="16dp"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>